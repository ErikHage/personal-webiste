<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/professional-experience.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/97921a8cee.js" crossorigin="anonymous"></script>

    <title>Erik Hage: Professional Experience</title>
</head>
<body>
<%- include('./partials/_nav'); %>
<div class="container-fluid">

    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8 text-center">
            <h2>Professional Experience</h2>
        </div>
        <div class="col-sm-2"></div>
    </div>

    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <h4 class="section-header">Full Time Jobs</h4>
            <% professionalExperience.jobData.forEach((workData, i) => { %>
                <div class="card work-card">
                    <div class="card-header">
                        <div><span class="company-name"><%= workData.companyName %></span></div>
                        <% workData.jobTitles.forEach((jobTitle) => { %>
                            <div class="row">
                                <div class="col text-start"><span class="job-title"><%= jobTitle.title %></span></div>
                                <div class="col text-end"><span class="job-tenure"><%= jobTitle.tenure %></span></div>
                            </div>
                        <% }); %>
                    </div>
                    <div class="card-body">
                        <div class="job-summary"><span><%= workData.summary %></span></div>

                        <% const accordionId = `jobAccordion${i}` %>

                        <div id="<%= accordionId %>">
                            <% workData.projects.forEach((project, j) => { %>
                                <% const collapseId = `jobCollapse${i}${j}` %>
                                <div class="card">
                                    <div class="card-header">
                                        <a class="btn" data-bs-toggle="collapse" href="#<%= collapseId %>"><%= project.title %></a>
                                    </div>
                                    <div id="<%= collapseId %>" class="collapse" data-bs-parent="#<%= accordionId %>">
                                        <div class="card-body">
                                        <div class="project-summary"><span><%= project.summary %></span></div>
                                        <div class="skills-used">Skills Used: <%= project.skillsUsed.join(", ") %></div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <div class="col-sm-2"></div>
    </div>

    <br />

    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <h4 class="section-header">Consulting Gigs / Side Work</h4>
            <% professionalExperience.consultingData.forEach((workData, i) => { %>
                <div class="card work-card">
                    <div class="card-header">
                        <div><span class="company-name"><%= workData.companyName %></span></div>
                        <% workData.jobTitles.forEach((jobTitle) => { %>
                            <div class="row">
                                <div class="col text-start"><span class="job-title"><%= jobTitle.title %></span></div>
                                <div class="col text-end"><span class="job-tenure"><%= jobTitle.tenure %></span></div>
                            </div>
                        <% }); %>
                    </div>
                    <div class="card-body">
                        <div class="job-summary"><span><%= workData.summary %></span></div>

                        <% const accordionId = `gigAccordion${i}` %>

                        <div id="<%= accordionId %>">
                            <% workData.projects.forEach((project, j) => { %>
                                <% const collapseId = `gigCollapse${i}${j}` %>
                                <div class="card">
                                    <div class="card-header">
                                        <a class="btn" data-bs-toggle="collapse" href="#<%= collapseId %>"><%= project.title %></a>
                                    </div>
                                    <div id="<%= collapseId %>" class="collapse" data-bs-parent="#<%= accordionId %>">
                                        <div class="card-body">
                                            <div class="project-summary"><span><%= project.summary %></span></div>
                                            <div class="skills-used">Skills Used: <%= project.skillsUsed.join(", ") %></div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
        <div class="col-sm-2"></div>
    </div>

    <%- include('./partials/_footer'); %>
</div>
</body>
</html>
