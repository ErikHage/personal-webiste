<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />

    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/professional-experience.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/97921a8cee.js" crossorigin="anonymous"></script>

    <title>Erik Hage: Professional Experience</title>
</head>
<body>

<%- include('./partials/_nav'); %>

<nav id="pageNavbar" class="navbar navbar-expand-sm bg-dark navbar-dark sticky-top2 d-none d-sm-block">
    <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="#fullTime">Full Time</a></li>
        <li class="nav-item"><a class="nav-link" href="#gigs">Gigs/Side Work</a></li>
    </ul>
</nav>

<div class="container-fluid scroll-spy-area" data-bs-spy="scroll" data-bs-target="#pageNavbar" data-bs-offset="10">
    <div class="page-title text-center">
        <h2>Professional Experience</h2>
    </div>

    <div class="row">
        <div class="col-0 col-md-1 col-lg-2"></div>
        <div class="col-12 col-md-10 col-lg-8">

            <div id="fullTime" class="row">
                <div class="section-title text-center">
                    <h3>Full Time Jobs</h3>
                </div>

                <% jobData.forEach((workData, i) => { %>
                    <div class="col-12">
                        <div class="card work-card">
                            <div class="card-header">
                                <div><span class="company-name"><%= workData.companyName %></span></div>
                                <% workData.jobTitles.forEach((jobTitle) => { %>
                                    <div class="row">
                                        <div class="col text-start"><span class="job-title"><%= jobTitle.title %></span></div>
                                        <div class="col text-end"><span class="job-tenure"><%= jobTitle.tenure %></span></div>
                                    </div>
                                <% }); %>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12 col-md-2">
                                        <% if (workData.companyLogo) { %>
                                            <div class="company-logo-wrapper text-center">
                                                <img class="img company-logo" src="<%= workData.companyLogo %>" alt="Company Logo">
                                            </div>
                                        <% } %>
                                    </div>
                                    <div class="col-12 col-md-10">
                                        <div class="job-summary"><span><%- workData.summary %></span></div>
                                    </div>
                                </div>

                                <% const accordionId = `jobAccordion${i}` %>

                                <div id="<%= accordionId %>">
                                    <% workData.projects.forEach((project, j) => { %>
                                        <% const collapseId = `jobCollapse${i}${j}` %>
                                        <div class="card">
                                            <div class="card-header">
                                                <a class="btn" data-bs-toggle="collapse" href="#<%= collapseId %>"><%= project.title %></a>
                                            </div>
                                            <div id="<%= collapseId %>" class="collapse" data-bs-parent="#<%= accordionId %>">
                                                <div class="card-body">
                                                    <div class="project-summary"><span><%- project.summary %></span></div>
                                                    <% project.skillsUsed.forEach((skill) => { %>
                                                        <span class="badge <%= skillColorMap[skill] %>"><%= skill %></span>
                                                    <% }); %>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>`
            </div>

            <br />

            <div id="gigs" class="row">
                <div class="section-title text-center">
                    <h3>Consulting Gigs / Side Work</h3>
                </div>

                <% consultingData.forEach((workData, i) => { %>
                    <div class="col-12">
                        <div class="card work-card">
                            <div class="card-header">
                                <div><span class="company-name"><%= workData.companyName %></span></div>
                                <% workData.jobTitles.forEach((jobTitle) => { %>
                                    <div class="row">
                                        <div class="col text-start"><span class="job-title"><%= jobTitle.title %></span></div>
                                        <div class="col text-end"><span class="job-tenure"><%= jobTitle.tenure %></span></div>
                                    </div>
                                <% }); %>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12 col-md-2">
                                        <% if (workData.companyLogo) { %>
                                            <div class="company-logo-wrapper text-center">
                                                <img class="img company-logo" src="<%= workData.companyLogo %>" alt="Company Logo">
                                            </div>
                                        <% } %>
                                    </div>
                                    <div class="col-12 col-md-10">
                                        <div class="job-summary"><span><%- workData.summary %></span></div>
                                    </div>
                                </div>

                                <% const accordionId = `gigAccordion${i}` %>

                                <div id="<%= accordionId %>">
                                    <% workData.projects.forEach((project, j) => { %>
                                        <% const collapseId = `gigCollapse${i}${j}` %>
                                        <div class="card">
                                            <div class="card-header">
                                                <a class="btn" data-bs-toggle="collapse" href="#<%= collapseId %>"><%= project.title %></a>
                                            </div>
                                            <div id="<%= collapseId %>" class="collapse" data-bs-parent="#<%= accordionId %>">
                                                <div class="card-body">
                                                    <div class="project-summary"><span><%= project.summary %></span></div>
                                                    <% project.skillsUsed.forEach((skill) => { %>
                                                        <span class="badge <%= skillColorMap[skill] %>"><%= skill %></span>
                                                    <% }); %>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

        </div>
        <div class="col-0 col-md-1 col-lg-2"></div>
    </div>

    <%- include('./partials/_footer'); %>
</div>
</body>
</html>
