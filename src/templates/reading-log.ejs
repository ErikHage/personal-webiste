<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width"/>

    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/about-me.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/97921a8cee.js" crossorigin="anonymous"></script>

    <title>Erik Hage: Reading Log</title>
</head>
<body>

<%
function formatDate(date) {
    if (date === null || date === undefined) {
        return "";
    }
    return date.toLocaleDateString('en-us', {
        year: "numeric",
        month: "short",
        day: "numeric"
    });
}
function calculateDays(start, finish) {
    if (finish === null || finish === undefined) {
        return "";
    }
    return Math.round((finish - start) / (1000 * 60 * 60 * 24));
}
%>

<%- include('./partials/_nav'); %>

<div class="container-fluid scroll-spy-area">
    <div class="page-title text-center">
        <h2>Reading Log</h2>
    </div>

    <div class="row">
        <div class="col-0 col-md-1"></div>
        <div class="col-12 col-md-10">
            <table class="table table-striped table-hover table-sm">
                <thead>
                <tr>
                    <th style="width: 30%">Title</th>
                    <th style="width: 20%">Series</th>
                    <th style="width: 5%">#</th>
                    <th style="width: 20%">Author</th>
                    <th style="width: 10%">Start</th>
                    <th style="width: 10%">Finish</th>
                    <th style="width: 5%">Days</th>
                </tr>
                </thead>
                <tbody>
                <% bookData.readingLog.forEach(record => { %>
                    <tr>
                        <td class="text-wrap"><%= record.title %></td>
                        <td class="text-wrap"><%= record.series %></td>
                        <td><%= record.installment %></td>
                        <td class="text-wrap"><%= record.author %></td>
                        <td><%= formatDate(record.start) %></td>
                        <td><%= formatDate(record.finish) %></td>
                        <td><%= calculateDays(record.start, record.finish) %></td>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        </div>
        <div class="col-0 col-md-1"></div>
    </div>

    <%- include('./partials/_footer'); %>
</div>
</body>
</html>
