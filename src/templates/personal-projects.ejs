<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/personal-projects.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/97921a8cee.js" crossorigin="anonymous"></script>

    <title>Erik Hage: Personal Projects</title>
</head>
<body>
<%- include('./partials/_nav'); %>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-8 text-center">
            <h2>Personal Projects</h2>
        </div>
        <div class="col-sm-2"></div>
    </div>
    <div class="row">
        <div class="col-xs-0 col-md-0 col-lg-2"></div>
        <div class="col-xs-12 col-md-12 col-lg-8">
            <div class="row">
                <% personalProjects.projects.forEach((project) => { %>
                    <div class="col-xs-12 col-md-6 col-lg-6">
                        <div class="card project-card">
                            <div class="card-header">
                                <div>
                                    <span class="project-name"><%= project.projectName %></span>
                                    <% if (project.link) { %>
                                        <a class="btn btn-sm btn-primary" href="<%= project.link %>" target="_blank"><i class="fa-solid fa-arrow-up-right-from-square"></i></a>
                                    <% } %>
                                    <% if (project.link) { %>
                                        <a class="btn btn-sm btn-secondary" href="<%= project.githubLink %>" target="_blank"><i class="fa-brands fa-github"></i></a>
                                    <% } %>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="project-summary"><span><%- project.summary %></span></div>

                                <% project.skillsUsed.forEach((skill) => { %>
                                    <span class="badge <%= skillColorMap[skill] %>"><%= skill %></span>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        <div class="col-xs-0 col-md-0 col-lg-2"></div>
    </div>
    <%- include('./partials/_footer'); %>
</div>
</body>
</html>
