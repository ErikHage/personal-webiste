<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width"/>

    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/about-me.css">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/97921a8cee.js" crossorigin="anonymous"></script>

    <title>Erik Hage: Reading Stats</title>
</head>
<body>

<%- include('./partials/_nav'); %>

<div class="container-fluid scroll-spy-area">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8 content-pane">

            <div class="page-title text-center">
                <h2>Reading Stats</h2>
            </div>

            <div class="row">
                <div class="col-0 col-md-3"></div>
                <div class="col-12 col-md-6">
                    <table class="table table-striped table-hover">
                        <tbody>
                        <% readingData.stats.forEach(stat => { %>
                            <tr>
                                <th><%= stat.name %></th>
                                <td><%= stat.value %></td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
                <div class="col-0 col-md-3"></div>
            </div>

            <div class="page-title text-center">
                <h2>Books per Year</h2>
            </div>

            <div class="row">
                <div class="col-2 col-md-4"></div>
                <div class="col-8 col-md-4">
                    <table class="table table-striped table-hover">
                        <tbody>
                        <% readingData.booksByYear.forEach(stat => { %>
                            <tr>
                                <th><%= stat.year %></th>
                                <td><%= stat.count %></td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
                <div class="col-2 col-md-4"></div>
            </div>

        </div>
        <div class="col-2"></div>
    </div>
    <%- include('./partials/_footer'); %>
</div>
</body>
</html>
